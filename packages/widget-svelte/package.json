{
	"name": "@loopbackapp/widget-svelte",
	"version": "0.1.0",
	"scripts": {
		"clean": "rm -fr ./dist",
		"dev": "run-p dev:watch:svelte dev:server",
		"dev:server": "vite dev --port 5175",
		"dev:watch:svelte": "chokidar 'src/**/*.svelte' -c 'pnpm build:css'",
		"build": "pnpm clean && vite build && pnpm package && pnpm build:css",
		"build:css": "tailwindcss -i ./src/lib/widget.css -o ./dist/widget.min.css --minify",
		"prepare": "svelte-kit sync",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"watch": {
		"build:css": "src/**/*.svelte"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tabler/icons-svelte": "^3.15.0",
		"autoprefixer": "^10.4.20",
		"chokidar-cli": "^3.0.0",
		"npm-run-all": "^4.1.5",
		"publint": "^0.2.0",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-scoped-preflight": "^3.4.4",
		"typescript": "^5.0.0",
		"vite": "^5.0.11"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"bits-ui": "^0.21.13",
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1"
	}
}
