{
	"compilerOptions": {
		"composite": true,
		"target": "es2022",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
